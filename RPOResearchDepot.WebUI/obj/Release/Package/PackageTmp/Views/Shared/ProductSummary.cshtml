@model RPOResearchDepot.Domain.Entities.Product

<div class="panel panel-default">
    
    <div class="panel-heading">
        <h2><span class="pull-right label label-default">@Model.Price.ToString("c")</span></h2>
        <h2 class="audiowide">@Model.Name</h2>
    </div>
    <div class="well" style="margin-bottom: 0px;">
        @if (Model.ImageData != null)
        {
            <div class="pull-left" style="margin-right: 10px">
                <img class="img-thumbnail" width="140" height="140" src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
            </div>
        }
        <span class="lead">@Model.Description</span>
    </div>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="panel-footer">
            <div class="pull-right">
                @Html.HiddenFor(x => x.ProductID)
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <input type="submit" class="btn btn-success" value="Add to cart" />
            </div>
            <br />
            <br />
        </div>
    }

    
</div>
