<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Orbitron|Roboto" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="container-fluid">
            <div class="navbar navbar-inverse" role="navigation">
                <a class="navbar-brand audiowide" href="/">
                    <span class="hidden-xs">RPO DEPOT</span>
                    <div class="visible-xs">RPO</div>
                </a>
                @Html.Action("Summary", "Cart")
                <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav" role="navigation">
                            <li class="dropdown hidden-xs">
                                <a href="#" class="dropdown-toggle hidden-xs" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">Products<span class="caret"></span></a>
                                <ul class="dropdown-menu hidden-xs">
                                    <li class="hidden-xs"><a href="/Page1">All Products</a></li>
                                    <li role="separator" class="divider hidden-xs"></li>
                                    <li class="hidden-xs"><a href="/Anime">Anime</a></li>
                                    <li class="hidden-xs"><a href="/Literary">Literary</a></li>
                                    <li class="hidden-xs"><a href="/Movies">Movies</a></li>
                                    <li class="hidden-xs"><a href="/Music">Music</a></li>
                                    <li class="hidden-xs"><a href="/Television">Television</a></li>
                                    <li class="hidden-xs"><a href="/Video Games">Video Games</a></li>
                                </ul>
                            </li>
                            <li><a class="hidden-xs" href="/Admin/Index">Admin</a></li>
                        </ul>
                </div>
            </div>
            <div class="text-center visible-xs">@Html.Action("Menu", "Nav")</div>
        </div>
        <br />
        <div class="container-fluid">
            <div class="row panel transparent">
                <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>